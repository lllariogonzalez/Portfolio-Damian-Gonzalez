---
import Section from "./Section.astro"

interface Props {
  data: any;
  sectionTitle: string;
}

const { data, sectionTitle } = Astro.props

---
<Section title={sectionTitle} >
  <ul class="flex flex-col gap-4">
    {
      data.map(({ name, startDate, endDate, position, summary }: any) => {
        const workPeriod = `${startDate} - ${endDate}`
        return (
          <li>
            <article>
              <header class="flex justify-between items-start mb-1">
                <div>
                  <h3 class="font-semibold text-[1.1rem] text-[#111] dark:text-[#dfdfdf]">{name}</h3>
                  <h4 class="font-normal text-[1.05rem] text-[#222] dark:text-[#dfdfdf]">{position}</h4>
                </div>
                <time class="text-[0.85rem] text-[#555] dark:text-[#e2e2e2]">{workPeriod}</time>
              </header>
              <footer>
                <p class="text-[#555] dark:text-[#bbb]">{summary}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
<Section />