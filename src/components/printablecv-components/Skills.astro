---
import Section from "./Section.astro"
import Git from "@/min-port-icons/Git.astro"
import Github from "@/min-port-icons/Github.astro"
import CSS from "@/min-port-icons/CSS.astro"
import HTML from "@/min-port-icons/HTML.astro"
import Javascript from "@/min-port-icons/Javascript.astro"
import Tailwind from "@/min-port-icons/Tailwind.astro"
import Typescript from "@/min-port-icons/Typescript.astro"
import Node from "@/min-port-icons/Node.astro"
import MySQL from "@/min-port-icons/MySQL.astro"
import Next from "@/min-port-icons/Next.astro"
import React from "@/min-port-icons/React.astro"

interface Props {
  data: any;
  sectionTitle: string;
}

const { data, sectionTitle } = Astro.props

const SKILLS_ICONS: Record<string, any> = {
  Github,
  Git,
  CSS,
  HTML,
  MySQL,
  Javascript,
  Tailwind,
  Typescript,
  Node,
  Next,
  React
}

---
<Section title={sectionTitle} >
  <ul>
    {
      data.map(({ name }:any) => {
        const Icon = SKILLS_ICONS[name]
        return (
          <li class="dark:bg-[#dbdbdb]">
            {Icon && <Icon />}
            <span>{name}</span>
          </li>
        )
      })
    }
  </ul>
<Section />

<style>
  ul {
    display: inline-flex;
    gap: .35rem;
    flex-wrap: wrap;
  }

  li {
    display: flex;
    align-items: center;
    gap: 6px;
    border-radius: 6px;
    background: #eee;
    color: #000;
    font-size: .75rem;
    font-weight: 500;
    padding: .25rem .75rem;
    min-height: 1.8rem;
  }
</style>