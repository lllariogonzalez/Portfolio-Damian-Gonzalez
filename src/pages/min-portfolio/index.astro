---

import PrintableLayout from '@/layouts/printableLayout.astro'

import Hero from '@/components/printablecv-components/Hero.astro'
import KeyboardManager from '@/components/printablecv-components/KeyboardManager.astro'

import { basics } from "@cv"
const { name } = basics
---

<PrintableLayout language="es" title=`CV minimalista - ${name}`>
	<main>
		<h1>Minimalist portfolio default locale</h1>
		<Hero data={basics} />
		<KeyboardManager />
	</main>
</PrintableLayout>

<style>
	main {
		padding: 4rem;
		margin: auto;
		width: 100%
	}
</style>
